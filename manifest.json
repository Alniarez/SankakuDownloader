{

  "manifest_version": 2,
  "name": "SankakuChrome",
  "version": "1.1",
  
  "icons": {
	"16": "icons/16.png",
	"38": "icons/38.png",
	"48": "icons/48.png",
	"96": "icons/96.png"
	},

  "description": "Download Sankaku Complex channel or idol images automaticly on Chrome based browsers.",
	
  "permissions": [
    "tabs", "downloads", "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://chan.sankakucomplex.com/post/show/*", "*://idol.sankakucomplex.com/post/show/*"],
      "js": ["post.js"]
    },
	{
      "matches": ["*://chan.sankakucomplex.com/*" , "*://idol.sankakucomplex.com/post/show/*"],
	  "css": ["all.css"],
	  "js": ["all.js"]
    }
  ],
  "background": {
	"scripts": ["background.js"]
  },
  "browser_action": {}
}
